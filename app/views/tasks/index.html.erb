<p id="notice"><%= notice %></p>

<h1>Vsa opravila</h1>

<table>
  <thead>
    <tr>
      <th>Vsebina</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.content %></td>
        <td><%= link_to 'Pokaži', task %></td>
        <td><%= link_to 'Uredi', edit_task_path(task) %></td>
        <td><%= link_to 'Izbriši', task, method: :delete, data: { confirm: 'Ste prepričani?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo opravilo', new_task_path %>
